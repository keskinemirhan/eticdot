---
const { categoryName, imageUrl } = Astro.props;
---

<a
  href={"/category/" + categoryName}
  style={{ backgroundImage: `url(${imageUrl})` }}
  class="card-wrapper"
>
  <div class="btn-wrapper">
    <div class="btn-cat bg-blue">{categoryName}</div>
  </div>
</a>

<style>
  .card-wrapper {
    width: 280px;
    height: 170px;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    border-radius: 20px;
    display: flex;
    margin: 10px;
    flex-direction: column-reverse;
    box-shadow:
      rgba(0, 0, 0, 0.19) 0px 10px 20px,
      rgba(0, 0, 0, 0.23) 0px 6px 6px;
  }
  .btn-wrapper {
    display: flex;
    flex-direction: row-reverse;
  }
  .btn-cat {
    text-decoration: none;
    color: white;
    font-size: 20px;
    margin: 10px;
    padding: 10px;
    border-radius: 20px;
    font-weight: bold;
  }
</style>
